{
  "name": "sofie-backend",
  "version": "1.0.0",
  "description": "S.O.F.I.E. Backend API - Sustainable Open-source Framework for Integrated Ecosystems",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "test": "jest --coverage",
    "test:watch": "jest --watch",
    "test:unit": "jest --testPathPattern=unit",
    "test:integration": "jest --testPathPattern=integration",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "db:init": "node scripts/database/init.js",
    "db:seed": "node scripts/database/seed.js",
    "db:migrate": "node scripts/database/migrate.js",
    "db:reset": "npm run db:init && npm run db:seed",
    "generate:docs": "node scripts/docs/generate.js",
    "generate:openapi": "node scripts/docs/openapi.js"
  },
  "keywords": [
    "SOFIE",
    "sustainable",
    "homestead",
    "water-management",
    "energy-management",
    "climate-control",
    "food-production",
    "community",
    "IoT",
    "REST-API"
  ],
  "author": "S.O.F.I.E. Team",
  "license": "MIT",
  "dependencies": {
    "express": "^4.18.2",
    "cors": "^2.8.5",
    "dotenv": "^16.0.3",
    "helmet": "^7.0.0",
    "morgan": "^1.10.0",
    "pg": "^8.10.0",
    "mysql2": "^3.4.0",
    "mongodb": "^5.7.0",
    "mongoose": "^7.3.0",
    "sequelize": "^6.32.1",
    "typeorm": "^0.3.16",
    "bcryptjs": "^2.4.3",
    "jsonwebtoken": "^9.0.1",
    "joi": "^17.9.2",
    "axios": "^1.4.0",
    "node-cache": "^5.1.2",
    "redis": "^4.6.7",
    "socket.io": "^4.6.2",
    "ws": "^8.13.0",
    "multer": "^1.4.5-lts.1",
    "sharp": "^0.32.1",
    "uuid": "^9.0.0",
    "moment": "^2.29.4",
    "moment-timezone": "^0.5.45",
    "lodash": "^4.17.21",
    "winston": "^3.10.0",
    "pino": "^8.14.2",
    "pino-pretty": "^10.2.0",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^4.6.3",
    "web3": "^4.0.1",
    "ethers": "^6.4.1",
    "nodemailer": "^6.9.3",
    "bull": "^4.11.0",
    "express-async-errors": "^3.1.1"
  },
  "devDependencies": {
    "nodemon": "^3.0.1",
    "jest": "^29.6.2",
    "supertest": "^6.3.3",
    "eslint": "^8.45.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-plugin-import": "^2.28.0",
    "prettier": "^3.0.0",
    "babel-jest": "^29.6.2",
    "@babel/core": "^7.22.9",
    "@babel/preset-env": "^7.22.9",
    "node-mocks-http": "^1.13.0",
    "faker": "^6.6.6",
    "factory.ts": "^1.3.1"
  },
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/sofie-systems/sofie-backend.git"
  },
  "bugs": {
    "url": "https://github.com/sofie-systems/sofie-backend/issues"
  },
  "homepage": "https://github.com/sofie-systems/sofie-backend#readme"
}
